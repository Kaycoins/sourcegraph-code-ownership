{
  "extends": "./node_modules/@sourcegraph/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2018", "webworker"],
    "inlineSources": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true,
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
